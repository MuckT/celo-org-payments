{
  "name": "@celo/payments",
  "private": true,
  "version": "0.0.0",
  "description": "TypeScript libraries and implementations of the Celo Payments Protocol",
  "repository": "https://github.com/celo-org/payments",
  "license": "Apache",
  "keywords": [
    "Celo",
    "payments"
  ],
  "scripts": {
    "clean": "rm -rf node_modules packages/**/node_modules packages/**/lib packages/**/build",
    "build": "lerna run build",
    "postinstall": "lerna bootstrap",
    "start": "yarn lerna run start --stream",
    "cli": "yarn --cwd ./packages/cli cli"
  },
  "engines": {
    "node": ">=12"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@types/node": "^16.3.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "resolutions": {
    "@celo/utils": "1.2.0"
  }
}
